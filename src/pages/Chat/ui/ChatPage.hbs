<div class="chat-page">
	<sidebar class="left-panel">
		<div class="left-panel__header">
			{{> Link href="/profile" text="Профиль >" type="secondary" }}
			{{> TextInput placeholder="Поиск" name="search" type="text" view="filled"}} 
		</div>
		<div class="chat-list">
			{{#each chats}}
				{{> ChatPreview this}}
			{{/each}}
		</div>
	</sidebar>

	<div class="chat-block">
		<header class="chat-block__header">
			{{> Avatar
				src='https://img.kupigolos.ru/hero/623e8f7ef3bba.jpg?p=bh&s=7a483e895f3c8ef1120cd83b8047e414'
				initials='BS'
				size="small"
			}}
			<h4>Винсент Вега</h4>
		</header>
		<main class="chat-block__content">
			{{#each messages}}
				{{> Message this}}
			{{/each}}
		</main>
		<footer class="chat-block__footer">
			{{> TextInput placeholder="Сообщение" name="message" type="text" view="filled"}}
			{{> Button text="→" class="primary" round="true"}}
		</footer>
	</div>
</div>