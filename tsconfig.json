{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@pages/*": ["src/pages/*"],
            "@widgets/*": ["src/widgets/*"],
            "@features/*": ["src/features/*"],
            "@entities/*": ["src/entities/*"],
            "@shared/*": ["src/shared/*"]
        }
    },
    "include": ["src", "vite-env.d.ts"],
    "exclude": ["node_modules"]
}
